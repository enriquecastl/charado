setup-teams
    display flex
    flex-direction column
    justify-content space-between
    width 100%
    height 100%

    h1
        flex-shrink 0
        font-size font-size-xl
        text-align center
        margin size-m 0
        line-height 1.5

    form
        flex-grow 1
        display flex
        flex-direction column
        justify-content space-between

        div.team-names
            flex-grow 1
            padding size-l

            input
                font-size font-size-l
                margin-bottom size-xxl
                border 0
                border-bottom 1px solid color-blue
                padding-bottom size-s
                width 100%

                &:focus
                    outline 0

        button.continue
            flex-shrink 0
            padding size-m 0
            background-color color-blue
            color white
            border 0
